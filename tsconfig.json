{
  "compilerOptions": {
    "outDir": "./dist",          // Compiled files go here
    "module": "CommonJS",        // For Node.js compatibility
    "target": "ES6",             // Modern JavaScript
    "declaration": true,         // Generate .d.ts type definition files
    "strict": true,              // Enable strict type checking
    "esModuleInterop": true,     // Interoperability between CommonJS and ES modules
    "skipLibCheck": true,        // Skip type checking for dependencies
    "sourceMap": true            // Generate source maps for debugging
  },
  "include": ["lib/**/*.ts"],    // Include your TypeScript source files
  "exclude": ["node_modules", "dist"] // Exclude unnecessary files
}
